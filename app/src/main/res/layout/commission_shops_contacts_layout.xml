<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    app:cardCornerRadius="50dp"
    android:backgroundTint="@color/back_text_color"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="394dp"
        android:orientation="vertical"
        tools:context=".Profile">

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/shopDetails"
            android:textColor="@color/SecondaryColor"
            android:textSize="30dp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:gravity="left"
            android:text="@string/name"
            android:textColor="@color/SecondaryColor" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:background="#F3F1F2"
            android:ems="10"
            android:freezesText="true"
            android:hint="Shop name will be displayed here"
            android:inputType="textEmailAddress"
            android:textColor="@color/MainColor"
            android:textColorHint="@color/MainColor"
            android:textSize="16sp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:text="@string/locationShop"
            android:textColor="@color/SecondaryColor" />

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:background="#F3F1F2"
            android:ems="10"
            android:freezesText="true"
            android:hint="Shop location will be displayed here"
            android:inputType="textEmailAddress"
            android:textColor="@color/MainColor"
            android:textColorHint="@color/MainColor"
            android:textSize="16sp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:text="@string/contact"
            android:textColor="@color/SecondaryColor" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:background="#F3F1F2"
            android:ems="10"
            android:freezesText="true"
            android:hint="Shop contact number will be displayed here"
            android:inputType="textEmailAddress"
            android:textColor="@color/MainColor"
            android:textColorHint="@color/MainColor"
            android:textSize="16sp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:text="@string/Email"
            android:textColor="@color/SecondaryColor" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:background="#F3F1F2"
            android:ems="10"
            android:freezesText="true"
            android:hint="Shop contact email will be displayed here"
            android:inputType="textEmailAddress"
            android:textColor="@color/MainColor"
            android:textColorHint="@color/MainColor"
            android:textSize="16sp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>